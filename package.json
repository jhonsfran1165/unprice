{
  "name": "builderai",
  "private": true,
  "engines": {
    "node": "20.11.1"
  },
  "workspaces": ["packages/*", "apps/*", "tooling/*", "internal/*"],
  "engineStrict": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules dist .next",
    "clean:workspaces": "turbo clean --parallel",
    "dev": "cross-env FORCE_COLOR=1 turbo dev --parallel",
    "dev:web": "turbo dev --parallel --filter !@builderai/expo --filter !@builderai/db",
    "typecheck": "turbo typecheck",
    "wh": "pnpm dlx webhookthing@latest",
    "knip": "knip",
    "fmt:fix": "pnpm biome format . --write && pnpm biome check . --apply",
    "fmt:check": "pnpm biome format . && pnpm biome check .",
    "validate": "pnpm typecheck && pnpm manypkg check && pnpm fmt:check",
    "manypkg:fix": "pnpm manypkg fix"
  },
  "dependencies": {
    "@biomejs/biome": "1.7.3",
    "@manypkg/cli": "^0.21.2",
    "@turbo/gen": "^1.12.4",
    "cross-env": "^7.0.3",
    "knip": "^5.17.4",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },

  "git": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "pnpm fmt:fix"
  }
}
